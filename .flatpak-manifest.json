{
    "id": "org.kde.calindori",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "calindori",
    "rename-icon": "calindori",
    "tags": ["nightly"],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.Solid.PowerManagement",
        "--own-name=org.kde.calindac"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "kcalendarcore",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/frameworks/kcalendarcore.git",
                    "branch": "master"
                }
            ],
            "modules": [
                {
                    "name": "libical",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/libical/libical/releases/download/v3.0.16/libical-3.0.16.tar.gz",
                            "sha256": "09fecacaf75ba5a242159e3a9758a5446b5ce4d0ab684f98a7040864e1d1286f"
                        }
                    ],
                    "cleanup": [
                        "/share/gtk-doc"
                    ]
                }
            ]
        },
        {
            "name": "kpeople",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                "type": "git",
                "url": "https://invent.kde.org/frameworks/kpeople.git",
                "branch": "master"
                }
            ]
        },
        {
            "name": "calindori",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "dir", "path": ".", "skip": [".git"] } ]
        }
    ]
}

